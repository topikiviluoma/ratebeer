<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>favourite beer</th>
    <th>favourite brewery</th>
    <th>favourite style</th>
    <th>ratings</th>
  </tr>
  </thead>

  <tbody>
  <% tops.each do |top| %>
      <tr>
        <td><%= link_to top.username, top %></td>
        <td><%= top.favorite_beer %></td>
        <td><%= top.favorite_brewery.to_s %></td>
        <td><%= top.favorite_style %></td>
        <td><%= top.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>